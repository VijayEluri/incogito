<stores>
  <store>
    <name>user</name>
    <persistence>bdb</persistence>
    <routing>client</routing>
    <replication-factor>1</replication-factor>
    <required-reads>1</required-reads>
    <required-writes>1</required-writes>
    <key-serializer>
      <type>string</type>
      <schema-info>utf8</schema-info>
    </key-serializer>
    <value-serializer>
      <type>json</type>
      <schema-info>
        {"id":"string", "attendanceMarkers":[{   "session":"string",    "attending":"boolean",    "rating":"string",    "ratingComment":"string"}]}
      </schema-info>
    </value-serializer>
  </store>
</stores>
